<p id="notice"><%= notice %></p>

<h1>Listing Drug Administrations</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Medication</th>
      <th>Quantity</th>
      <th>Dt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drug_administrations.each do |drug_administration| %>
      <tr>
        <td><%= Patient.find(drug_administration.patient_id).fullname %></td>
        <td><%= Medication.find(drug_administration.medication_id).formulatedName %></td>
        <td><%= drug_administration.quantity %></td>
        <td><%= drug_administration.dt %></td>
        <td><%= link_to 'Show', drug_administration %></td>
        <td><%= link_to 'Edit', edit_drug_administration_path(drug_administration) %></td>
        <td><%= link_to 'Destroy', drug_administration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

