<p id="notice"><%= notice %></p>

<h1>Listing Pulses</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Pulse</th>
      <th>Dt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pulses.each do |pulse| %>
      <tr>
        <td><%= Patient.find(pulse.patient_id).fullname %></td>
        <td><%= pulse.pulse %></td>
        <td><%= pulse.dt %></td>
        <td><%= link_to 'Show', pulse %></td>
        <td><%= link_to 'Edit', edit_pulse_path(pulse) %></td>
        <td><%= link_to 'Destroy', pulse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

